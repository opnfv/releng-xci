{% for name in roles['controller'] %}
{% if name in nodes_d %}
host infra{{ loop.index }} {{ name }}
    HostName {{ nodes_ip[name]['ip'] }}
{% endif %}
{% endfor %}
{% for name in roles['compute'] %}
{% if name in nodes_d %}
host compute{{ loop.index }} {{ name }}
    HostName {{ nodes_ip[name]['ip'] }}
{% endif %}
{% endfor %}

host *
    User {{ opnfv_user }}
    StrictHostKeyChecking=false
