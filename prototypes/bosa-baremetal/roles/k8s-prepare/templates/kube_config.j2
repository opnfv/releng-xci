apiVersion: v1
kind: Config
clusters:
- cluster:
    api-version: v1
    insecure-skip-tls-verify: true
{% if ':' in server_url %}
    server: "https://{{ server_url }}/k8s/clusters/{{ cluster_id }}"
{% else %}
    server: "https://{{ server_url }}:80/k8s/clusters/{{ cluster_id }}"
{% endif %}
  name: "Default"
contexts:
- context:
    cluster: "Default"
    user: "Default"
  name: "Default"
current-context: "Default"
users:
- name: "Default"
  user:
    username: "{{ username }}"
    password: "{{ password }}"
