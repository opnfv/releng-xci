<network>
  <name>{{ vm_network_admin }}</name>
  <forward mode='nat'>
    <nat>
      <port start='1024' end='65535'/>
    </nat>
  </forward>
  <forward dev='ens1f1'/>
  <bridge name='{{ network_interface_admin }}' stp='on' delay='0'/>
  <ip address='100.64.233.4' netmask='255.255.255.0'>
  </ip>
</network>
<network>
  <name>{{ vm_network_mgmt }}</name>
  <forward mode='nat'>
    <nat>
      <port start='1024' end='65535'/>
    </nat>
  </forward>
  <forward dev='ens2f0.85'/>
  <bridge name='{{ network_interface_mgmt }}' stp='on' delay='0'/>
  <ip address='{{ opnfv_vm.remote_management.address.split(':')[0] }}' netmask='{{ node_network_netmask }}'>
     <dhcp>
      {%- for interface in opnfv_vm.interfaces %}
       {%-   if 'native' in (interface.vlan | string) %}
       <host mac="{{ interface.mac_address }}" ip="{{ interface.address }}"/>
       {%-   endif %}
       {%- endfor %}
     </dhcp>
  </ip>
</network>
